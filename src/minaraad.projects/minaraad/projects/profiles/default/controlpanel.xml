<?xml version="1.0"?>
<object name="portal_controlpanel" meta_type="Plone Control Panel Tool"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="plone">
 <configlet
     title="Project settings"
     action_id="minaraad_project_properties"
     i18n:attributes="title"
     appId="minaraad.projects"
     category="Products"
     condition_expr="python:True"
     url_expr="string:${portal_url}/project_properties"
     icon_expr="string:site_icon.png"
     visible="True">
  <permission>Manage portal</permission>
 </configlet>
 <configlet
     title="Statistics"
     action_id="export_statistics"
     i18n:attributes="title"
     appId="minaraad.projects"
     category="Products"
     condition_expr="python:True"
     url_expr="string:${portal_url}/@@export_statistics"
     icon_expr="string:site_icon.png"
     visible="True">
  <permission>Manage portal</permission>
 </configlet>
</object>