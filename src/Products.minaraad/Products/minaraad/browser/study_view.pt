<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="minaraad">

   <body>
   <metal:block fill-slot="content-title">
      <h1>
         <span tal:replace="context/Title" />
      </h1>
      <span tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;"
            tal:replace="python:toLocalizedTime(context.date)" />
     <div tal:define="name context/getThemeName|nothing"
        tal:condition="name"
        class="hearingsubheader2">
       <span i18n:translate="label_theme_name">Theme:</span>
       <span class="normaltext" tal:content="name" />
     </div>
   </metal:block>

   <metal:block fill-slot="content-description">
   </metal:block>

   <metal:block fill-slot="content-core">
     <h5>
        <tal:block i18n:translate="minaraad_label_summary">Summary</tal:block>
     </h5>
     <img tal:condition="context/getFoto"
          tal:attributes="src string:${context/absolute_url}/foto_foto;"
           alt=""
           class="hearingphoto" />
     <div tal:condition="context/getBody"
          tal:content="structure context/getBody" />
      <!-- Start Attachments-->
      <div metal:use-macro="context/mina_attachments/macros/listattachments" />
      <!-- end Attachments -->

      <!-- Contactperson -->
      <tal:block tal:define="obj nocall: context">
        <div metal:use-macro="context/contactperson_macros/macros/show_coord_authors"
             tal:omit-tag="" />
      </tal:block>
      <!-- end contactpersoon -->
   </metal:block>
   </body>
</html>
