<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="minaraad">
    <body>

    <hidden fill-slot="content-title">
    </hidden>

    <hidden fill-slot="content-description">
    </hidden>

    <metal:block metal:fill-slot="content-core">

        <div class="content-wrapper">

          <main role="main" id="main-container">

            <section class="sec-themes">
              <div  class="container">

                <div class="sec-header">
                  <h2>Thema’s</h2>
                </div>

                <div class="row">

                    <div class="left">
                      <div class="row masonry">

                        <tal:primaryThemes tal:repeat="item view/primary_themes">
                          <div class="column grid-item">
                            <article class="article-theme">
                              <a tal:attributes="href item/absolute_url">
                                <div class="body">
                                  <tal:image
                                      tal:define="images item/@@images;
                                      thumbnail python:images.scale('image', width=105, height=105, direction='down')"
                                      tal:condition="thumbnail">
                                    <img tal:attributes="src thumbnail/url; alt item/Title" />
                                  </tal:image>
                                  <h3 tal:content="item/Title">
                                  </h3>
                                  <p class="truncate" tal:content="item/Description">
                                  </p>
                                </div>
                              </a>
                            </article>
                          </div>

                        </tal:primaryThemes>

                      </div>
                    </div>


                    <div class="right">

                      <tal:secondaryThemes tal:repeat="item view/secondary_themes">
                        <article class="article-theme-other">
                          <a tal:attributes="href item/absolute_url">
                            <header>
                              <tal:image
                                  tal:define="images item/@@images;
                                  thumbnail python:images.scale('image', width=100, height=100, direction='down')"
                                  tal:condition="thumbnail">
                                <img tal:attributes="src thumbnail/url; alt item/title" />
                              </tal:image>
                              <h3 tal:content="item/Title"></h3>
                            </header>
                            <div class="body">
                              <p tal:content="item/Description"></p>
                            </div>
                          </a>
                        </article>
                      </tal:secondaryThemes>

                    </div>

                </div>

              </div>
            </section>

            <section class="sec-related">
              <div  class="container">
                <div class="sec-header">
                  <h2><a href="#">Actuele documenten</a></h2>
                </div>

                <div class="row masonry">

                      <tal:relatedItems
                          tal:define="related_items python:context.getRelatedItems();"
                          tal:repeat="item related_items">
                        <div class="column grid-item">
                          <article class="article-advice">
                            <a tal:attributes="href item/absolute_url">
                              <tal:image
                                  tal:define="image item/get_first_image;"
                                  tal:condition="python: image is not None">
                                <img tal:attributes="src string:${image/absolute_url}/image_preview;
                                                     alt item/title" />
                              </tal:image>
                              <div class="body">
                                <h3 tal:content="item/Title"></h3>
                                <p class="label">
                                   <span tal:content="item/portal_type"
                                         tal:omit-tag=""
                                   i18n:translate="">Advies</span> <span tal:content="item/getThemeTitle">biodiversiteit</span></p>
                                <div class="truncate" tal:content="structure item/getPopular_summary|item/Description|nothing"></div>
                              </div>
                            </a>
                          </article>
                      </div>
                      </tal:relatedItems>

                </div>
              </div>
            </section>

          </main>

        </div>

    </metal:block>
    </body>
</html>
