<dl class="portlet portletPersonalPreferences"
    tal:define="portal_url context/@@plone_portal_state/portal_url;
                mtool context/portal_membership"
    i18n:domain="minaraad">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span class="portlet_title"
              i18n:translate="title_my_account">
            My account
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
      <div class="personalbar_bordertop">
        <ul class="portlet-personalbar-mina">
          <li class="portalUser">
            <a id="user-name"
               tal:omit-tag="not: mtool/getHomeFolder"
               tal:attributes="href string:${mtool/getHomeUrl}">
              <span class="visualCaseSensitive"
                    tal:replace="python:user.getProperty('firstname', user.getUserName())" />
            </a>
          </li>
          <li>
             <a tal:attributes="href string:${portal_url}/personalize_form"
               class="link-personalbar">Mijn contactgegevens</a>
          </li>
          <li>
             <a tal:attributes="href string:${portal_url}/subscriptions_config.html"
                class="link-personalbar">Mijn abonnementen</a>
          </li>
          <li>
             <a tal:attributes="href string:${portal_url}/password_form"
                class="link-personalbar">Wachtwoord wijzigen</a>
          </li>
          <li>
             <a tal:attributes="href string:${portal_url}/logout"
                class="link-personalbar">Uitloggen</a>
           </li>
           <li>
             <a class="link-personalbar"
                tal:attributes="href string:${portal_url}/uitschrijven">Uitschrijven</a>
           </li>
           <li tal:condition="view/can_manage">
              <a tal:attributes="href string:${portal_url}/plone_control_panel"
                 class="link-personalbar">Website configuratie</a>
           </li>
        </ul>
      </div>
    </dd>
</dl>
