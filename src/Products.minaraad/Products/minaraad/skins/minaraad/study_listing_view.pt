<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="minaraad">

  <body>
    <metal:block fill-slot="main"
                 tal:define="current_path python:'/'.join(context.getPhysicalPath());
                             toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                             studies python:context.portal_catalog.searchResults(portal_type='Study',
                             path=current_path,
                             sort_on='getDate',
                             sort_order='reverse');">
      <metal:block metal:define-macro="folderlisting" />

      <h1 tal:content="context/Title"
          class="documentFirstHeading">Title</h1>

      <div class="documentDescription"
           tal:condition="context/Description"
           tal:content="context/Description" />

      <div tal:repeat="item_object studies"
           class="bodytext studylisting">
        <tal:block define="obj python:item_object.getObject()">
          <h2>
             <a tal:attributes="href item_object/getURL;
                               title item_object/Title"
               tal:content="item_object/Title" />
         </h2>

         <div tal:content="python:toLocalizedTime(item_object.getDate)[3:]"
            tal:condition="python:obj.getDate()" />

          <span tal:condition="obj/Description|nothing"
               tal:content="obj/Description" />
        </tal:block>
      </div>
    </metal:block>
  </body>
</html>