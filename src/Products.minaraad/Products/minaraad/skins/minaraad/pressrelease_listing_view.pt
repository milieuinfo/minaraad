<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="minaraad">

   <body>
   <metal:block fill-slot="main"
      tal:define="current_path python:'/'.join(context.getPhysicalPath());
                  pressreleases python:context.portal_catalog.searchResults(portal_type='Pressrelease',
                                                                           path=current_path,
                                                                           sort_on='getDate',
                                                                           sort_order='reverse');">
      <metal:block define-macro="folderlisting" />

      <h1 tal:content="context/Title"
         class="documentFirstHeading">Title</h1>

      <div class="documentDescription"
         tal:condition="context/Description"
         tal:content="context/Description" />

      <table id="pressrelease-list">
         <tbody valign="top">
            <tal:block repeat="item_object pressreleases">
            <tr tal:define="obj python:item_object.getObject();">
               <th tal:define="daterequired python:obj.getDate() != None;
                              date python:toLocalizedTime(obj.date)[:-5];"
                  class="listdate">

                  <span tal:condition="daterequired"
                     tal:replace="date" />
               </th>
               <td>
                  <h2>
                     <a tal:content="item_object/Title"
                        tal:attributes="href item_object/getURL;
                                       title item_object/Title" />
                  </h2>
                  <div class="pressrelease_listsub"
                     tal:content="obj/getSubheader" />

                  <span tal:content="item_object/Description" />
               </td>
            </tr>
            </tal:block>
         </tbody>
      </table>
   </metal:block>
   </body>
</html>
