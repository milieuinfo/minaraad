<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      i18n:domain="minaraad">
    <metal:block use-macro="context/global_defines/macros/defines" />

    <body>
    <metal:block metal:define-macro="body">
        <br />
        <a tal:attributes="href string:${context/absolute_url}/attachment">
            <img tal:attributes="src string:${portal_url}/file_icon.gif;
                                 alt context/attachment/filename" />
            <span tal:content="context/attachment/filename" />
        </a>
        <span class="filesize"
              tal:define="size python:context.getObjSize(context)"
              tal:condition="size" 
              tal:content="size">257 KB</span>
    </metal:block>
    </body>
</html>
