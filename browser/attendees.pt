<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="minaraad">

    <body>
    <div metal:fill-slot="main">
    
        <div metal:use-macro="here/document_actions/macros/document_actions">
            Document actions (print, sendto etc)
        </div>
    
        <h1 class="documentFirstHeading">
            <span tal:replace="object_title" /> &mdash; 
            <span i18n:translate="label_attendees" 
                  tal:omit-tag="">Attendees</span>
        </h1>
    
        <form method="get"
              tal:attributes="action string:${context/absolute_url}/$template_id">

            <fieldset>
                <legend i18n:translate="label_add_attendee">Add Attendee</legend>

                <div class="field">
                  <label>Member Id</label>
                  <div class="formHelp">
                  </div>                
                  <input type="text" name="memberId"/>
                </div>
            </fieldset>
        </form>
    </div>
    </body>
</html>
