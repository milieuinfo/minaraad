<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="minaraad">

    <body>
    <metal:block metal:fill-slot="main">
    <div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
    </div>
    <h1> Welkom bij Minaraad</h1>
    Milieu- en Natuurraad van Vlaanderen
    <br />
    <br />

    <tal:block tal:define="latestitems python:context.portal_catalog.searchResults(portal_type=['Hearing', 'Advisory',
                                                                                        'Study', 'AnnualReport',
                                                                                        'Pressrelease', 'NewsLetter',
                                                                                        'Event'],
                                                                                    sort_on='Date',
                                                                                    sort_order='reverse');
                           results python:latestitems[:10]">

        <div tal:repeat="item results">
            <div class="hearingsubheader2">
                <span tal:replace="item/Title" />
                <a tal:attributes="href item/getURL"
                    i18n:translate="linkmoreinfo" style="font-weight: normal">More</a>
            </div>
            <br />
        </div>

    </tal:block>
    </metal:block>
    </body>
</html>
