<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      i18n:domain="minaraad">
    <metal:block use-macro="context/global_defines/macros/defines" />

    <body>
    <metal:block metal:define-macro="header">
        <h1>
            <span tal:replace="context/Title" />
        </h1>
        <span class="documentDescription"
            tal:content="context/getSubheader" />
        
        <div class="documentDescription"
            tal:content="context/Description" />

        
        Datum:
        <!-- Date and Time -->
        <span metal:use-macro="context/mina_showdatetime/macros/datetime"
                tal:omit-tag="" />
        <!-- end Date and Time -->
    </metal:block>

    <metal:block metal:define-macro="body">
         <div tal:condition="context/getLocation"
              tal:omit-tag="">
            <span i18n:translate="minaraad_label_location"
                  tal:omit-tag="">Location</span>:
            <span tal:replace="context/getLocation" />
            <br /> 
        </div>
        <!-- Text -->
        <div class="bodytext"
            tal:content="structure context/getBody"
            tal:condition="context/getBody" />
        <!-- End text -->
        
        <!-- Speakers -->
        <tal:block tal:define="speakers context/getSpeakers"
                   tal:condition="speakers">
            <h4 i18n:translate="minaraad_label_speakers">
                Speakers
            </h4>
            <tal:block tal:repeat="speaker speakers">
                <div tal:replace="speaker" />
                <div tal:condition="not:repeat/speaker/end" 
                    tal:omit-tag="">
                    <br />
                </div>
            </tal:block>
            <br />
            <br />
        </tal:block>
        <!-- end Speakers -->
        
        <!-- Start Attachments-->
        <div metal:use-macro="context/mina_attachments/macros/listattachments" />
        <!-- end Attachments -->
    
		<!-- Contactperson -->
        <tal:block tal:define="contacts python:context.getContact()"
                   tal:condition="contacts">
            <br />
            <div i18n:translate="moreinfo_contactperson">
                For more information contact:
            </div>
            <tal:block tal:repeat="contact contacts">
           <div metal:use-macro="context/contactperson_view/macros/contactdetails"
                tal:omit-tag="" />
            </tal:block>
            <br />
        </tal:block>
        <!-- end contactpersoon -->

    </metal:block>
    <metal:block metal:define-macro="folderlisting" />
    </body>
</html>
