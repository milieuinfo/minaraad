<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
   lang="en-US"
   i18n:domain="minaraad">
   <metal:block use-macro="context/global_defines/macros/defines" />

   <body>
   <metal:block define-macro="header">
      <div metal:use-macro="here/document_actions/macros/document_actions">
         Document actions (print, sendto etc)
      </div>
      <h1>
         <span tal:replace="context/Title" />
      </h1>
      <span tal:replace="python:toLocalizedTime(context.date)" />
   </metal:block>

   <metal:block define-macro="body">
     <h5>
        <tal:block i18n:translate="minaraad_label_summary">Summary</tal:block>
     </h5>   
     <div tal:condition="context/getBody"
          tal:content="structure context/getBody" />
      <!-- Start Attachments-->
      <div metal:use-macro="context/mina_attachments/macros/listattachments" />
      <!-- end Attachments -->

      <!-- Contactperson -->
      <tal:block define="contacts python:context.getContact()"
         condition="contacts">
         <div i18n:translate="moreinfo_contactperson"
            class="cp-moreinfo">
             For more information contact:
         </div>
         <tal:listcontacts repeat="contact contacts">
            <div metal:use-macro="context/contactperson_view/macros/contactdetails"
               tal:omit-tag="" />
         </tal:listcontacts>
      </tal:block>
      <!-- end contactpersoon -->
   </metal:block>

   <metal:block metal:define-macro="folderlisting" />
   </body>
</html>
