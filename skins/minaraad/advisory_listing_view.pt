<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="minaraad">

  <body>
    <metal:block metal:fill-slot="main"
                 tal:define="current_path python:'/'.join(context.getPhysicalPath());
                             advisories python:context.portal_catalog.searchResults(portal_type='Advisory',
                             path=current_path,
                             sort_on='getDate',
                             sort_order='reverse');">
      <metal:block metal:define-macro="folderlisting" />

      <div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
      </div>
      <h1 tal:content="context/Title"
          class="documentFirstHeading">Title</h1>

      <div class="documentDescription"
           tal:content="context/Description" />

      <table class="advisory_listing">
        <tbody valign="top">
          <tr tal:repeat="item_object advisories">
            <tal:block tal:define="obj python:item_object.getObject()">

              <td tal:define="daterequired python:obj.getDate() != None;
                              date python:toLocalizedTime(obj.date)[:-5];"
                  class="listdate">

                <span tal:condition="daterequired"
                      tal:replace="date" />
              </td>
              <td tal:define="current_path python:'/'.join(obj.getPhysicalPath());
                              attachments python:context.portal_catalog.searchResults(portal_type='FileAttachment',
                              path=current_path,);">

                <tal:block repeat="attachment attachments">
                  <div tal:define="desc attachment/Description;
                                   item_type attachment/portal_type;
                                   idx repeat/attachment/index"
                       class="advisory_links">
                    <a tal:attributes="href attachment/getURL;
                                       title desc;">
                      <span tal:condition="python:idx == 0"
                            tal:replace="item_object/Title" />
                      <span tal:condition="python:idx &gt; 0"
                            tal:replace="attachment/Title" />
                    </a>
                  </div>
                </tal:block>

                <div tal:replace="structure obj/getBody"
                     tal:condition="obj/getBody"/>
               
                 <a tal:attributes="href item_object/getURL"
                     i18n:translate="linkmoreinfo">More</a>      

                <div tal:define="contacts python:obj.getContact()"
                     tal:condition="contacts"
                     class="advisory_listing_contacts">

                  <tal:block repeat="contact contacts">
                    <a tal:attributes="href string:mailto:${contact/getEmail}"
                       tal:content="contact/getEmail"
                       class="discreet" />
                  </tal:block>
                </div>
                
              </td>
            </tal:block>
          </tr>
        </tbody>
      </table>
    </metal:block>
  </body>
</html>