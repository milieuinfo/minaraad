<metal:page define-macro="master">
<metal:master use-macro="here/main_template/macros/master"
              i18n:domain="minaraad">

    <metal:block metal:fill-slot="top_slot" define-slot="top_slot"
                tal:define="dummy python:request.set('disable_border',1)" />
    
    <metal:fillbase fill-slot="base">
        <metal:baseslot define-slot="base">
            <base tal:attributes="href template/absolute_url" />
        </metal:baseslot>
    </metal:fillbase>

    <metal:cssslot fill-slot="css_slot">
      <!-- A slot where you can insert CSS in the header from a template -->
      <metal:cssslot define-slot="css_slot" />
    </metal:cssslot>

    <metal:override fill-slot="portlets_one_slot">
      <metal:prefs use-macro="here/portlet_prefs/macros/portlet" />
    </metal:override>

    <metal:override fill-slot="column_two_slot" />

    <body>
    <div metal:fill-slot="main" 
         metal:define-slot="prefs_configlet_main"
         tal:define="errors python:request.get('errors', {});"
         tal:omit-tag="">
    
        <div class="configlet">
            <div class="documentEditable">
             
                <ul class="contentViews"
                    tal:define="tabs python:('Config','themes_config'),;
                                tabs python:[ {'label':label, 'name':name} for (label,name) in tabs];">
                    <li tal:repeat="tab tabs"
                        class="selected" 
                        tal:attributes="class python:template.pt_source_file()==tab['name'] and 'selected' or ''">
                        <a tal:attributes="href string:${here/absolute_url}/${tab/name}"
                           tal:content="tab/label">Config</a>
                    </li>
                </ul>
        
                <div class="documentContent" 
                     metal:define-slot="kupu_content">
                     
                    <h3>Thema's</h3>
                    <form action=""
                          name="configure_themes"
                          method="post"
                          tal:attributes="action here/absolute_url">

                        <fieldset>
                            <legend>themes</legend>
                            <div class="field">
                                <label for="themes">Thema's</label>
                                <div class="formHelp">Wijzig de lijst met thema's</div>
                                <input type="hidden" name="themes_class:list:default" 
                                    value=" " />
                                
                                <textarea name="themes:lines" 
                                        id="themes"
                                        rows="5" cols="30"
                                        tal:content="python:'\n'.join(here.getThemesList())">
                                </textarea>
                            </div>
                        </fieldset>
    
                        <input class="context"
                                tabindex=""
                                type="submit"
                                name="configure_themes:method"
                                value="Save"
                                i18n:attributes="value"
                                tal:attributes="tabindex tabindex|nothing;" />
                    </form>
                </div>
            </div>
        </div>
    </div>
    </body>
</metal:master>
</metal:page>


